# get rid of Gentoo config
unset mbox_type
unset folder
unset spoolfile
unset record
unset move
unset index_format

# configuration
set from="Foster McLane <foster@fkmclane.net>"
set sort=threads
set sort_aux=last-date-received
set folder=~/.mail
set move=yes

set use_envelope_from

# outgoing mail
source ~/.smtprc

# folders
set spoolfile=~/.mail/inbox/
set mbox=~/.mail/archive/
set record=~/.mail/sent/
set postponed=~/.mail/draft/

# subscriptions
subscribe '^gentoo-(announce|user|dev|devhelp|security|mirrors)@lists\.gentoo\.org$'

# alternates
alternates '^fkmclane@gmail\.com$'

# encryption
source ~/.gpg.rc

# colors
color normal     white           default
color error      red             default
color tilde      brightwhite     default
color message    cyan            default
color markers    red             default
color attachment brightwhite     default
color search     brightyellow    default
color indicator  black           white
color tree       yellow          default

# index
set index_format='%4C %Z %{%b %d} %-15.15L %s'

folder-hook   sent 'set index_format="%4C %Z %{%b %d} %-15.15L %s"'
folder-hook ! sent 'set index_format="%4C %Z %{%b %d} %-15.15F %s"'

color index           white   default     '.*'
color index_author    default default     '.*'
color index_flags     default red         '~F'
color index_collapsed default brightblue
color index_date      green   default
color index_label     default brightgreen
color index_number    red     default
color index_size      cyan    default

# status
set status_format='-%r-Mutt: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%>-(%P)---'

color status white       default '^.*$'
color status brightred   default '(New|Del|Flag):[0-9]+'
color status brightred   default '\([^)]+/[^)]+\)'
color status default     default '\(threads/last-date-received\)'
color status red         default '\[([^]]+)\]' 1
color status brightwhite default 'Mutt: ([^ ]+)' 1

# headers
ignore *

unignore from date subject to cc
unignore authentication-results

color hdrdefault white default

color header green   default "^([fF]rom|[tT]o|[cC]{2})"
color header blue    default "^([sS]ubject)"
color header yellow  default "^([dD]ate|[aA]uthentication-[rR]esults)"
